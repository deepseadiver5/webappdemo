<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <h1>
        <%= category %> Products
    </h1>
    <% if(category !== 'All') { %>
        <a href="/products">Show all products</a>
        <%}%>
            <a href="/products/new">Add New Product</a>
            <% for(let product of products) { %>
                <p>Name: <%= product.name %>
                </p>
                <p>Price: Â£<%= product.price %>p</p>
                <p>Category: <%= product.category %>
                </p>
                <a href="/products/<%=product._id%>">Show product details</a>
                <form action="/products/<%=product._id%>?_method=DELETE" method="post"> <button>Delete</button></form>
                <form action="/products/<%=product._id%>/edit" method="get">
                    <button>Edit</button>
                </form>
                <a href="/products">Back to index</a>

                <% } %>
</body>

</html>